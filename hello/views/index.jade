extends layout

block content
	h1= title
	p Welcome to #{title}

	ul#messages


	form(action="") 
		input#m(autocomplete="off")
		button Send


	script(src="/javascripts/socket.io.js")
	script(src="http://code.jquery.com/jquery-1.11.1.js")
	script var socket = io();$('form').submit(function(){socket.emit('chat message', $('#m').val());$('#m').val('');return false;});socket.on('chat message', function(msg){$('#messages').append($('<li>').text(msg));});
